<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary2</item>
        <item name="colorPrimaryDark">@color/colorPrimary3</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="Widget.AppTheme.LikesButton" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="iconTint">@color/likes_24_selector</item>
        <item name="backgroundTint">@color/card_post_tint_selector</item>
    </style>

    <style name="Widget.AppTheme.SharesButton" parent="Widget.MaterialComponents.Button.TextButton.Icon" >
        <item name="iconTint">@color/shares_24_selector</item>
        <item name="backgroundTint">@color/card_post_tint_selector</item>
    </style>

    <style name="Widget.AppTheme.ViewsButton" parent="Widget.MaterialComponents.Button.TextButton.Icon" >
        <item name="iconTint">@color/views_24_selector</item>
        <item name="backgroundTint">@color/card_post_tint_selector</item>
    </style>

    <style name="Widget.AppTheme.MenuButton" parent="Widget.MaterialComponents.TimePicker.ImageButton" >
        <item name="iconTint">@color/more_vert_24_selector</item>
        <item name="backgroundTint">@color/card_post_tint_selector</item>
    </style>

    <style name="Widget.AppTheme.ParticipantsButton" parent="Widget.MaterialComponents.Button.TextButton.Icon" >
        <item name="iconTint">@color/participants_24_selector</item>
    </style>

    <style name="Widget.AppTheme.IconButton" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="iconTint">@color/icon_button_tint</item>
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingStart">@dimen/icon_button_padding</item>
        <item name="android:paddingEnd">@dimen/icon_button_padding</item>
        <item name="android:minWidth">@dimen/icon_button_min_size</item>
        <item name="android:minHeight">@dimen/icon_button_min_size</item>
    </style>

    <style name="Widget.AppTheme.IconButtonOk" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="iconTint">@color/participants_24_selector</item>
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingStart">@dimen/icon_button_padding</item>
        <item name="android:paddingEnd">@dimen/icon_button_padding</item>
        <item name="android:minWidth">@dimen/icon_button_min_size</item>
        <item name="android:minHeight">@dimen/icon_button_min_size</item>
    </style>
</resources>